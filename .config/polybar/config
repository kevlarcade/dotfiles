red = #cc241d
green = #98971a
yellow = #d79921
blue = #458588
purple = #b16286
aqua = #689d6a
orange = #d65d0e

[bar/primary]
width = 98%
height = 28
offset-x = 1%
offset-y = 4
radius-top = 4
radius-bottom = 4

fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Source Code Pro:pixelsize=15;3
font-1 = FontAwesome:pixelsize=14;3
font-2 = IPAGothic:pixelsize=15;3

modules-left = bspwm
modules-center = date
modules-right = cmus wlan temperature xbacklight volume battery

wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

format = <label-state>
label-focused-occupied = 
label-focused-occupied-padding = 2

label-focused-urgent = 
label-focused-urgent-padding = 2

label-focused-empty = 
label-focused-empty-padding = 2

label-occupied = 
label-occupied-foreground = ${colors.foreground-alt}
label-occupied-padding = 2

label-urgent = 
label-urgent-foreground = ${colors.orange}
label-urgent-padding = 2

label-empty = 
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

label-monocle = " "
label-monocle-foreground = ${colors.foreground-alt}
label-tiled = " "
label-tiled-foreground = ${colors.foreground-alt}
label-fullscreen = " "
label-fullscreen-foreground = ${colors.foreground-alt}
label-floating = " "
label-floating-foreground = ${colors.foreground-alt}
label-pseudotiled = " "
label-pseudotiled-foreground = ${colors.foreground-alt}
label-locked = " "
label-locked-foreground = ${colors.foreground-alt}
label-sticky = " "
label-sticky-foreground = ${colors.foreground-alt}
label-private = "  "
label-private-foreground = ${colors.foreground-alt}

[module/weather]
type = custom/script
interval = 1800
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.blue}
exec = ~/.config/polybar/weather
exec-if = "ping -q -w 2 -c 1 8.8.8.8 > /dev/null"

[module/xbacklight]
type = internal/xbacklight

format = <ramp> <label>
label = %percentage%

ramp-0 = 
ramp-0-foreground = ${colors.red}
ramp-1 = 
ramp-1-foreground = ${colors.yellow}
ramp-2 = 
ramp-2-foreground = ${colors.yellow}
ramp-3 = 
ramp-3-foreground = ${colors.green}

[module/wlan]
type = internal/network
interface = wlp0s29u1u2
interval = 3.0
ping-interval = 3

format-connected = <ramp-signal> <label-connected>
format-packetloss = <animation-packetloss> <label-connected>
label-connected = %essid%

;format-disconnected =
;format-disconnected = <label-disconnected>
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-0-foreground = ${colors.red}
ramp-signal-1 = 
ramp-signal-1-foreground = ${colors.yellow}
ramp-signal-2 = 
ramp-signal-2-foreground = ${colors.green}

animation-packetloss-0 = 
animation-packetloss-0-foreground = ${colors.yellow}
animation-packetloss-1 = 
animation-packetloss-1-foreground = ${colors.background}
animation-packetloss-framerate = 1000

[module/date]
type = internal/date
interval = 5

time-alt = %H:%M
date-alt = " %A, %e %b"

time = %H:%M

format-prefix = 
format-prefix-foreground = ${colors.aqua}

label = %date% %time%

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%
label-muted =  00
label-muted-foreground = ${colors.orange}

ramp-volume-0 = 
ramp-volume-0-foreground = ${colors.red}
ramp-volume-1 = 
ramp-volume-1-foreground = ${colors.yellow}
ramp-volume-2 = 
ramp-volume-2-foreground = ${colors.green}

[module/battery]
type = internal/battery
poll-interval = 30
battery = BAT0
adapter = AC0
full-at = 96

format-full = <label-full>
format-full-prefix = " "
format-full-prefix-foreground = ${colors.green}
label-full = %percentage%

format-charging = <label-charging>
format-charging-prefix = " "
format-charging-prefix-foreground = ${colors.yellow}
label-charging = %percentage%

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %time%

ramp-capacity-0 = 
ramp-capacity-0-background = ${colors.red}
ramp-capacity-0-foreground = ${colors.white}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.red}
ramp-capacity-2 = 
ramp-capacity-2-foreground = ${colors.yellow}
ramp-capacity-3 = 
ramp-capacity-3-foreground = ${colors.green}
ramp-capacity-4 = 
ramp-capacity-4-foreground = ${colors.green}

[module/temperature]
interval = 2
type = internal/temperature
thermal-zone = 3
warn-temperature = 75

format = <ramp> <label>
label = %temperature%
label-foreground = ${colors.foreground}

format-warn = <ramp> <label-warn>
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-0-foreground = ${colors.green}
ramp-1 = 
ramp-1-foreground = ${colors.green}
ramp-2 = 
ramp-2-foreground = ${colors.green}
ramp-3 = 
ramp-3-foreground = ${colors.yellow}
ramp-4 = 
ramp-4-foreground = ${colors.red}

[module/cmus]
type = custom/script
exec = sh ~/.config/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.purple}
click-left = cmus-remote --pause
click-right = cmus-remote --stop

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5
